%YAML 1.2
---
Application:
  license_key: <%= @license %>
  poll_interval: 60

  apache_httpd:
    scheme: http
    host: localhost
    port: 8080
    path: /server-status

<% if !@memcachedhost.nil? %>
  memcached:
    host: <%= @memcachedhost %>
    port: 11211
<% end %>

  php_apc:
    scheme: http
    host: localhost
    port: 80
    path: /apc-nrp.php

Daemon:
  user: newrelic
  pidfile: /var/run/newrelic/newrelic_plugin_agent.pid

Logging:
  formatters:
    verbose:
      format: '%(levelname) -10s %(asctime)s %(process)-6d %(processName) -15s %(threadName)-10s %(name) -45s %(funcName) -25s L%(lineno)-6d: %(message)s'
  handlers:
    file:
      class : logging.handlers.RotatingFileHandler
      formatter: verbose
      filename: /var/log/newrelic/newrelic_plugin_agent.log
      maxBytes: 10485760
      backupCount: 3
  loggers:
    newrelic_plugin_agent:
      level: INFO
      propagate: True
      handlers: [console, file]
    requests:
      level: ERROR
      propagate: True
      handlers: [console, file]
